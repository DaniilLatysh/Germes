@model Trade.Models.WarehouseViewModel

@{
    ViewBag.Title = "Warehouse";
}


<div class="overlay warehouse">
    <h4>WAREHOUSE</h4>
    <hr />

    <div class="col-lg-12 ">
        @{Html.RenderPartial("Search"); }
    </div>

    <div class="col-lg-10 ">
        @{ Html.RenderPartial("Products", Model); }
    </div>

    <div class="col-lg-2 form-border">
        <div class="form-group ">
            <a href="@Url.Action("Create", "Warehouse")" class="btn btn-success col-lg-12" title="Create new product">CREATE</a>
        </div>
        <div class="form-group ">
            <a href="@Url.Action("MergeItems", "Warehouse")" class="btn btn-primary col-lg-12" title="Merge items">MERGE ITEMS</a>
        </div>
        <div class="form-group ">
            <a href="@Url.Action("Index", "Price")" class="btn btn-primary col-lg-12" title="Price manager">PRICE MANAGER</a>
        </div>
        <div class="form-group ">
            <a href="@Url.Action("Index", "Supplier")" class="btn btn-primary col-lg-12" title="Suppliers manager">SUPPLIER MANAGER</a>
        </div>
    </div>
    <div class="col-lg-2 form-border">
        <div class="form-group ">
            <a href="@Url.Action("ExportProductXML", "Warehouse")" class="btn btn-warning col-lg-12" title="Export">EXPORT TO XML</a>
        </div>
        <div class="form-group ">
            <a href="@Url.Action("Update", "Warehouse")" class="btn btn-warning col-lg-12" title="Update">UPDATE PRODUCTS</a>
        </div>
    </div>
    @if (ViewBag.Message != null)
    {
        <div class="col-lg-2 form-border">
            <div class="form-group">
                <div class="has-success">
                    @Html.Raw(ViewBag.Message)
                </div>
            </div>
        </div>
    }
</div>