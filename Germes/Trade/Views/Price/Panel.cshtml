@model Trade.Models.PriceViewModel

<h4>Rows of price</h4>
<div class="form-horizontal ">
    
    @using (Html.BeginForm("Download", "Price", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Suppliers, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.SelectedSupplierID, Model.SuppliersSLI, new { @class = "dropdown-menu" })
                </div>

            </div>
            <hr>
        </div>
        <div class="col-md-6 ">
            <div class="form-horizontal">
                <div class="form-group ">
                    <label class="col-md-6 control-label "> Product key</label>
                    <input type="number" name="Key" class="col-md-6 form-control row-selecter" value="0" min="0" max="99999" step="1" />
                </div>
                <div class="form-group ">
                    <label class="col-md-6 control-label "> Product name</label>
                    <input type="number" name="productName" class="col-md-6 form-control row-selecter" value="0" min="0" step="1" />
                </div>
                <div class="form-group ">
                    <label class="col-md-6 control-label "> Quantity</label>
                    <input type="number" name="productQuantity" class="col-md-6 form-control row-selecter" value="0" min="0" step="1" />
                </div>
                <div class="form-group ">
                    <label class="col-md-6 control-label "> Warrianty</label>
                    <input type="number" name="productWarrianty" class="col-md-6 form-control row-selecter" value="0" min="0" step="1" />
                </div>

            </div>
        </div>

        <div class="col-md-6">
            <div class="form-horizontal">
                <div class="form-group ">
                    <label class="col-md-6 control-label "> Price In</label>
                    <input type="number" name="productPriceIn" class="col-md-6 form-control row-selecter" value="0" min="0" step="1" />
                </div>
                <div class="form-group ">
                    <label class="col-md-6 control-label "> Price Sale</label>
                    <input type="number" name="productPriceSale" class="col-md-6 form-control row-selecter" value="0" min="0" step="1" />
                </div>
                <div class="form-group">
                    <input type="file" id="dataFile" name="excelFile" class="col-lg-12" />
                </div>
                <div class="form-group">
                    <label class="col-md-6 control-label "></label>
                    <input type="submit" value="Download" class="btn btn-default " />
                </div>

                @if (ViewBag.TotalSize != null)
                {
                    <div class="has-error">
                        @Html.Raw(ViewBag.TotalSize) /
                        @Html.Raw(ViewBag.Current)
                    </div>
                }

            </div>
        </div>
    }
    @using (Html.BeginForm("Upload", "Price", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-md-12">
            <hr>
            <div class="form-group">
                <label class="control-label col-md-4">LOAD SELECTED</label>
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.SelectedSupplierID, Model.SuppliersSLI, new { @class = "dropdown-menu" })
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Upload" class="btn btn-default " />
                </div>
            </div>
            <hr>
        </div>
    }
    <div class="col-md-12">
        <div class="form-group">

            @if (ViewBag.Error != null)
            {
                <div class="has-error">
                    @Html.Raw(ViewBag.Error)
                </div>
            }
        </div>
    </div>

</div>
